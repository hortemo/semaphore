{
  "name": "@hortemo/semaphore",
  "version": "1.0.0",
  "description": "A minimal FIFO semaphore for JS/TS.",
  "license": "MIT",
  "author": "Henrik Hortemo",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts --clean",
    "test": "vitest run",
    "lint": "tsc --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hortemo/semaphore.git"
  },
  "bugs": {
    "url": "https://github.com/hortemo/semaphore/issues"
  },
  "homepage": "https://github.com/hortemo/semaphore#readme",
  "keywords": [
    "semaphore",
    "concurrency",
    "permits",
    "fifo",
    "async",
    "throttle",
    "limit concurrency"
  ],
  "devDependencies": {
    "tsup": "^8.5.0",
    "typescript": "^5.6.3",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18"
  }
}
